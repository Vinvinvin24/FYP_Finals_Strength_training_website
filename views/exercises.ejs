<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Exercises</title>
    <link rel="stylesheet" href="/styles/exercises-style.css">
</head>
<body>
    <header>
        <div class="logo-container">
            <img src="/images/logo.jpg" alt="Logo" class="logo">
            <h1>Strength Training Journey</h1>
        </div>
        <button id="toggleTextSize" style="float: right;">Toggle Text Size</button>
    </header>
    <nav>
      <a href="/">Home</a>
      <a href="/login">Login</a>
      <a href="/exercises">Exercises</a>
      <a href="/resources">Resources</a>
      <a href="/rewards">Rewards</a>
      <a href="/profile">Profile</a>
    </nav>
    <main>
        <h2>Available Exercise Routines</h2>
        <div id="routineList">
            <% routines.forEach(function(routine) { %>
                <div class="routine-item">
                    <h3><%= routine.name %> - <%= routine.days %> days program</h3>
                    <p><%= routine.description %></p>
                    <p>Points Awarded: <%= routine.pointsAwarded %></p>
                    <button onclick="addRoutineToPlan('<%= routine.id %>', '2023-01-01')">Add to My Plan</button>
                </div>
            <% }); %>
        </div>
    </main>
    <script src="https://www.gstatic.com/dialogflow-console/fast/messenger/bootstrap.js?v=1"></script>
    <df-messenger
      intent="WELCOME"
      chat-title="StrengthChatbot"
      agent-id="5d239e99-dcb4-4dba-b127-90b97d14894a"
      language-code="en"
    ></df-messenger>
    <footer>
        <p>&copy; 2024 Exercise Website</p>
    </footer>
    <script src="/scripts/exercises-script.js"></script>
