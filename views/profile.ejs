<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile</title>
  <link rel="stylesheet" href="/styles/profile-style.css">
</head>
<body>
    <header>
        <div class="logo-container">
            <img src="../images/logo.jpg" alt="Logo" class="logo">
            <h1>Strength Training Journey</h1>
        </div>
        <button id="toggleTextSize" style="float: right;">Toggle Text Size</button>
    </header>
    <nav>
        <a href="/">Home</a>
        <a href="/login">Login</a>
        <a href="/exercises">Exercises</a>
        <a href="/resources">Resources</a>
        <a href="/rewards">Rewards</a>
        <a href="/profile">Profile</a>
    </nav>
    <main>
        <h1>Welcome, <%= user.username %>!</h1>
        <p>Total Points: <%= user.points %></p>
        <form action="/logout" method="POST">
            <button type="submit">Logout</button>
        </form>
          

        <h2>Your Workout Plans</h2>
        <% workoutPlans.forEach(function(plan) { %>
            <div>
              <p>Routine Name: <%= plan.name %></p>
              <p>Description: <%= plan.description %></p>
              <p>Status: <%= plan.completed ? 'Completed' : 'Incomplete' %></p>
              <% if (!plan.completed) { %>
                <form action="/markCompleted" method="post">
                  <input type="hidden" name="planId" value="<%= plan.id %>">
                  <button type="submit">Mark as Completed</button>
                </form>
              <% } %>
            </div>
          <% }); %>                  
      </main>
      
  <footer>
    <p>&copy; 2024 Exercise Website</p>
</footer>
</body>
</html>
